<!-- CATALOG CATEGORIES -->
<section id="catalog" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
            <div>
                <h2 class="h1 mb-1">Разделы каталога</h2>
                <p class="text-body-secondary mb-0">
                    Выберите тип инструмента, чтобы перейти к списку доступных позиций.
                </p>
            </div>
            <a class="btn btn-outline-primary" asp-controller="Catalog" asp-action="Index">
                Открыть полный каталог
            </a>
        </div>

        <div class="row g-4">
            <div class="col-12">
                <div class="alert alert-light border d-flex align-items-center gap-2 mb-0">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span>Загрузка разделов каталога...</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CONTACTS -->
<section id="contacts" class="py-5 bg-light">
    <div class="container">
        <h2 class="h1 mb-4">Контакты</h2>
        <div class="row g-4">
            <div class="col-lg-5">
                <div class="p-4 border rounded-4 bg-white h-100">
                    <div class="mb-3">
                        <i class="bi bi-geo-alt me-2"></i>
                        <span>Кишинёв, центр</span>
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-telephone me-2"></i>
                        <a href="tel:+37300000000" class="text-decoration-none">+373 (000) 00-00</a>
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-envelope me-2"></i>
                        <a href="mailto:rent@music.example" class="text-decoration-none">rent@music.example</a>
                    </div>
                    <div class="mb-0">
                        <i class="bi bi-clock me-2"></i>
                        <span>Ежедневно 10:00–21:00</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="ratio ratio-16x9 rounded-4 overflow-hidden shadow-sm">
                    <iframe
                        src="https://maps.google.com/maps?q=Chisinau&hl=ru&z=12&output=embed"
                        style="border:0" loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                        title="Карта">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- MESSAGE FORM -->
<section id="message" class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <h2 class="h1 mb-3">Написать сообщение</h2>
                <p class="text-body-secondary">
                    Опиши задачу: мероприятие, жанр, площадка. Подберём комплект и рассчитаем стоимость.
                </p>
                <form asp-controller="Contact" asp-action="Send" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="msgName">Имя</label>
                            <input id="msgName" name="Name" type="text" class="form-control" required/>
                            <div class="invalid-feedback">Укажи имя</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="msgEmail">Email</label>
                            <input id="msgEmail" name="Email" type="email" class="form-control" required/>
                            <div class="invalid-feedback">Укажи корректный email</div>
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="msgSubject">Тема</label>
                            <input id="msgSubject" name="Subject" type="text" class="form-control" placeholder="Прокат синтезатора на 2 дня" required/>
                            <div class="invalid-feedback">Добавь тему</div>
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="msgText">Сообщение</label>
                            <textarea id="msgText" name="Message" rows="5" class="form-control" placeholder="Дата, адрес, список оборудования..." required></textarea>
                            <div class="invalid-feedback">Напиши сообщение</div>
                        </div>
                        <div class="col-12 d-flex align-items-center gap-2">
                            <input id="agree" name="Agree" type="checkbox" class="form-check-input" required/>
                            <label for="agree" class="form-check-label small text-body-secondary">
                                Согласие на обработку персональных данных
                            </label>
                            <div class="invalid-feedback d-block">Подтверди согласие</div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-send me-1"></i> Отправить
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <div class="p-4 border rounded-4 h-100">
                    <h3 class="h5 mb-3">Как работает прокат</h3>
                    <ol class="mb-0 ps-3">
                        <li class="mb-2">Выбор инструмента в каталоге или консультация</li>
                        <li class="mb-2">Заключение договора и залог</li>
                        <li class="mb-2">Доставка/самовывоз и настройка</li>
                        <li class="mb-0">Возврат, осмотр, возврат залога</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
