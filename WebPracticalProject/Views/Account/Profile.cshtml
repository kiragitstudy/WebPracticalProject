@model WebPracticalProject.Controllers.AccountController.ProfilePageVm
@{
    ViewData["Title"] = "Профиль";
}

<div class="container py-5">
    <!-- Шапка профиля -->
    <div class="row g-4 mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="card-body p-4 p-lg-5">
                    <div class="row align-items-center g-4">
                        <div class="col-auto">
                            <div class="rounded-circle bg-primary bg-gradient d-flex align-items-center justify-content-center" 
                                 style="width: 100px; height: 100px;">
                                <span class="display-4 text-white fw-bold">
                                    @(Model.DisplayName?.FirstOrDefault().ToString().ToUpper() ?? Model.Email.FirstOrDefault().ToString().ToUpper())
                                </span>
                            </div>
                        </div>
                        <div class="col">
                            <h1 class="h3 mb-2">@(Model.DisplayName ?? "Пользователь")</h1>
                            <p class="text-body-secondary mb-3">
                                <i class="bi bi-envelope me-2"></i>@Model.Email
                            </p>
                            <span class="badge bg-primary-subtle text-primary-emphasis px-3 py-2">
                                <i class="bi bi-shield-check me-1"></i>
                                @(Model.Role switch {
                                    WebPracticalProject.Domain.Common.UserRole.Admin => "Администратор",
                                    WebPracticalProject.Domain.Common.UserRole.Manager => "Менеджер",
                                    _ => "Клиент"
                                })
                            </span>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                                <i class="bi bi-pencil me-1"></i> Редактировать
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Статистика -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-chat-dots fs-1 text-primary mb-3"></i>
                    <h3 class="h2 mb-2">@Model.Messages.Total</h3>
                    <p class="text-body-secondary mb-0">Всего сообщений</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-calendar-check fs-1 text-success mb-3"></i>
                    <h3 class="h2 mb-2">—</h3>
                    <p class="text-body-secondary mb-0">Активных заказов</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-clock-history fs-1 text-info mb-3"></i>
                    <h3 class="h2 mb-2">—</h3>
                    <p class="text-body-secondary mb-0">История аренд</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Мои сообщения -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0">
                            <i class="bi bi-inbox me-2"></i>Мои сообщения
                        </h2>
                        <a class="btn btn-sm btn-primary" href="#message">
                            <i class="bi bi-plus-lg me-1"></i> Написать новое
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Messages.Items.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-body-tertiary"></i>
                            <p class="text-body-secondary mt-3 mb-0">У вас пока нет сообщений</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var msg in Model.Messages.Items)
                            {
                                <div class="list-group-item list-group-item-action p-4">
                                    <div class="row align-items-start g-3">
                                        <div class="col-auto">
                                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" 
                                                 style="width: 48px; height: 48px;">
                                                <i class="bi bi-envelope-open text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="mb-0">
                                                    @(string.IsNullOrWhiteSpace(msg.Subject) ? "Без темы" : msg.Subject)
                                                </h5>
                                                <small class="text-body-secondary text-nowrap ms-3">
                                                    @msg.CreatedAt.LocalDateTime.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </div>
                                            <p class="text-body-secondary mb-2 text-truncate" style="max-width: 100%;">
                                                @msg.Message
                                            </p>
                                            <div class="d-flex gap-2 align-items-center">
                                                <span class="badge bg-light text-dark">
                                                    <i class="bi bi-person me-1"></i>@(msg.Name ?? msg.Email)
                                                </span>
                                                <span class="badge bg-light text-dark">
                                                    <i class="bi bi-envelope me-1"></i>@msg.Email
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                
                @if (Model.Messages.Items.Any())
                {
                    var p = Model.Messages.Page;
                    var total = Model.Messages.Total;
                    var size = Model.Messages.Size;
                    var pages = Math.Max(1, (int)Math.Ceiling((double)total / size));
                    
                    <div class="card-footer bg-white border-top p-4">
                        <nav>
                            <ul class="pagination pagination-sm justify-content-center mb-0">
                                <li class="page-item @(p <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Profile", new { page = p - 1, size })">
                                        <i class="bi bi-chevron-left"></i> Назад
                                    </a>
                                </li>
                                @for (int i = Math.Max(1, p - 2); i <= Math.Min(pages, p + 2); i++)
                                {
                                    <li class="page-item @(i == p ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Profile", new { page = i, size })">@i</a>
                                    </li>
                                }
                                <li class="page-item @(p >= pages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Profile", new { page = p + 1, size })">
                                        Вперёд <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Опасная зона -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger-subtle border-bottom-0 p-4">
                    <h3 class="h5 mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Опасная зона
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-body-secondary mb-3">
                        Удаление аккаунта необратимо. Все ваши данные, сообщения и история заказов будут безвозвратно удалены.
                    </p>
                    <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                        <i class="bi bi-trash me-1"></i> Удалить аккаунт
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно редактирования профиля -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-pencil me-2"></i>Редактировать профиль
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form asp-controller="Account" asp-action="UpdateProfile" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label" for="editDisplayName">Отображаемое имя</label>
                        <input id="editDisplayName" name="DisplayName" type="text" class="form-control" 
                               value="@Model.DisplayName" placeholder="Введите ваше имя"/>
                        <div class="form-text">Это имя будет отображаться в системе</div>
                    </div>
                    <div class="mb-0">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" value="@Model.Email" disabled/>
                        <div class="form-text">Email изменить нельзя</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Отмена</button>
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-check-lg me-1"></i> Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно удаления аккаунта -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-danger">
            <div class="modal-header bg-danger-subtle border-bottom-0">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>Удаление аккаунта
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form asp-controller="Account" asp-action="DeleteAccount" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-danger mb-3">
                        <strong>Внимание!</strong> Это действие необратимо. Все ваши данные будут удалены без возможности восстановления.
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="deletePassword">Подтвердите пароль</label>
                        <input id="deletePassword" name="Password" type="password" class="form-control" 
                               placeholder="Введите ваш текущий пароль" required/>
                        <div class="form-text">Для удаления аккаунта введите пароль</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" type="button" data-bs-dismiss="modal">Отмена</button>
                    <button class="btn btn-danger" type="submit">
                        <i class="bi bi-trash me-1"></i> Удалить аккаунт навсегда
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>